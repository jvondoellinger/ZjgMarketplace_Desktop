<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstAppMAUI.Views.Page.CartPage"
             xmlns:local="clr-namespace:FirstAppMAUI.Views.Content"
             Title="Cart">
    <VerticalStackLayout>
        <ScrollView Orientation="Horizontal">
            <StackLayout 
                Orientation="Horizontal"
                Spacing="15"
                Padding="15"
                BindableLayout.ItemsSource="{Binding Products}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate>
                        <local:ProductCardsView x:Name="ProductCardsView"/>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>
        </ScrollView>

    </VerticalStackLayout>
</ContentPage>