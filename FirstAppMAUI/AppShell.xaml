<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstAppMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FirstAppMAUI.Views.Page"
    Shell.FlyoutBehavior="Flyout"
    Title="FirstAppMAUI"
    FlyoutBackgroundColor="LightGray"
    >

    <FlyoutItem Title="Login/Signup">
        <Tab>
            <ShellContent 
                ContentTemplate="{DataTemplate local:LoginPage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate local:HomePage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Temporary Cart">
        <Tab>
            <ShellContent
                ContentTemplate="{DataTemplate local:CartPage}"/>
        </Tab>
    </FlyoutItem>
</Shell>
