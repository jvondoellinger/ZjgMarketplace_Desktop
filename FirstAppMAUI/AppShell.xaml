<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FirstAppMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local1="clr-namespace:FirstAppMAUI.Views"
    xmlns:local2="clr-namespace:FirstAppMAUI"
    Shell.FlyoutBehavior="Flyout"
    Title="FirstAppMAUI"
    FlyoutBackgroundColor="LightGray"
    >

    <FlyoutItem Title="Login/Signup">
        <Tab>
            <ShellContent Title="Login/Signup" ContentTemplate="{DataTemplate local1:LoginPage}"/>
        </Tab>
    </FlyoutItem>
    <FlyoutItem Title="Home">
        <Tab>
            <ShellContent x:Name="HomeShellOption" Title="Home" ContentTemplate="{DataTemplate local1:HomePage}"/>
        </Tab>
    </FlyoutItem>
</Shell>
